{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@config/*": ["Config/*"],
      "@core/*": ["Core/*"],
      "@infrastructure/*": ["Infrastructure/*"]
    },
    "moduleResolution": "node"
  },
  "include": ["src/**/*"]
}
